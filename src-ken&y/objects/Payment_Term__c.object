    <validationRules>
        <fullName>Cut_off_day_must_be_between_1_and_31</fullName>
        <active>true</active>
        <errorConditionFormula>OR(Cut_Off_Day__c &lt; 1, Cut_Off_Day__c &gt; 31)</errorConditionFormula>
        <errorDisplayField>Cut_Off_Day__c</errorDisplayField>
        <errorMessage>Cut off day must be between 1 and 31</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Day_of_Month_must_be_between_1_and_31</fullName>
        <active>true</active>
        <errorConditionFormula>OR(Day_Of_Month__c &lt; 1, Day_Of_Month__c &gt; 31)</errorConditionFormula>
        <errorDisplayField>Day_Of_Month__c</errorDisplayField>
        <errorMessage>Day of month must be between 1 and 31</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Enter_due_days_for_payment_term</fullName>
        <active>true</active>
        <errorConditionFormula>IF( ISPICKVAL( Type__c , &quot;Due Days&quot;) , ISBLANK(  Due_Days__c  ), false )</errorConditionFormula>
        <errorMessage>Please enter due days for the selected payment term type.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Enter_due_days_of_month_for_payment_term</fullName>
        <active>true</active>
        <errorConditionFormula>IF( ISPICKVAL( Type__c , &quot;Due Day Of Month&quot;) ,  OR(ISBLANK(  Day_Of_Month__c  ),ISBLANK(  Cut_Off_Day__c  ),ISBLANK(  Months_Ahead__c  ) ),  false )</errorConditionFormula>
        <errorMessage>Please enter due day of month, cut off day and months ahead for the selected payment term type.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Months_ahead_must_be_between_0_and_12</fullName>
        <active>true</active>
        <errorConditionFormula>OR(Months_Ahead__c &lt; 0, Months_Ahead__c &gt; 12)</errorConditionFormula>
        <errorDisplayField>Months_Ahead__c</errorDisplayField>
        <errorMessage>Months ahead must be between 0 and 12</errorMessage>
    </validationRules>
