                    }
                    
                    if (!dataItem.get('skid.Location__c'))
                    {
                        // remove the bin__c from the trackedAttributes if putaway location is empty
                        var trackedAttributes = [];
                        dataItem.set('trackedAttributes', trackedAttributes);
                        
                        return;
